<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
           <div class="card">
               <div class="card-body">
                   <form action="/horarios/agregar_nota" method="POST">
                   <input type="hidden" name="horario_id" value="{{horario_id}}">
                   <input type="hidden" name="estudiante_id" value="{{estudiante_id}}">
                   <div class="form-group">
                       <label><strong>AGREGAR NOTA ESTUDIANTE</strong></label> 
                   </div>
                   <div class="form-group">
                       <select class="form-control"  name='momento'>
                            <option value="momento 1" selected>Momento 1</option>
                            <option value="momento 2">Momento 2</option> 
                            <option value="momento 3">Momento 2</option> 
                            <option value="nota final">Nota final</option>  
                    </select>
                   </div>
                   <div class="form-group">
                       <input type="double" class="form-control" name="nota" placeholder="Nota"> 
                   </div>
                   <div class="form-group">
                       <button class="btn btn-success btn-block">Guardar</button>
                   </div>
                   </form>
               </div>
           </div> 
        </div>
    </div>
</div>