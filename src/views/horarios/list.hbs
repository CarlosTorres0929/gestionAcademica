<div class="container p-4">
    <div class="row">
       <table class="table">
        <thead>
            <tr align="center">
                <th scope="col" colspan="9" align="center"><strong>LISTADO DE HORARIOS</strong></th>
                
            </tr>
            <tr>
                <th scope="col" colspan="9"><a href="/horarios/agregar" class="btn btn-success ">Agregar Horario</a></th>
                
            </tr>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">PROFESOR</th>
                <th scope="col">MATERIA</th>
                <th scope="col">GRUPO</th>
                <th scope="col">DIA</th>
                <th scope="col">HORA INICIO</th>
                <th scope="col">HORA FIN</th>
                <th scope="col">AULA</th>
                <th scope="col">ACCIONES</th>
            </tr>
        </thead>
        <tbody>
            {{#each horarios}}  
            <tr>
                <td>{{horarios_id}}</td>
                <td>{{profesor_id}}</td>
                <td>{{materia_id}}</td>
                <td>{{grupo_id}}</td>
                <td>{{dia}}</td>
                <td>{{hora_inicio}}</td>
                <td>{{hora_fin}}</td>
                <td>{{aula}}</td>
                <td><a href="/horarios/editar/{{horarios_id}}" class="btn btn-secondary">Editar</a>&nbsp;&nbsp;<a href="/horarios/borrar/{{horarios_id}}" class="btn btn-danger">Borrar</a>&nbsp;&nbsp;<a href="/horarios/estudiantes/{{horarios_id}}" class="btn btn-success">Ver estudiantes</a></td>
            </tr>
            {{else}}
                 <tr align="center">
                    <th scope="col" colspan="6" align="center"><strong>NO HAY HORARIOS AUN REGISTRADOS</strong></th>
                 </tr>
            {{/each}}
        </tbody>
     </table>
   
    </div>
</div>