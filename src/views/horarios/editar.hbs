<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
           <div class="card">
               <div class="card-body">
                   <form action="/materia/editar/{{materia.id_materia }}" method="POST">
                   <div class="form-group">
                       <label><strong>MODIFICAR MATERIA</strong></label> 
                   </div>
                   <div class="form-group">
                       <input type="text" value="{{materia.nombre}}" class="form-control" name="nombre" placeholder="Nombre" autofocus> 
                   </div>
                   <div class="form-group">
                       <input type="number" value="{{materia.creditos}}" class="form-control" name="creditos" placeholder="Creditos"> 
                   </div>
                   <div class="form-group">
                       <input type="text" value="{{materia.correo}}" class="form-control" name="materia_pre_id" placeholder="Materia pre"> 
                   </div>
                   <div class="form-group">
                       <button class="btn btn-success btn-block">Guardar</button>
                   </div>
                   </form>
               </div>
           </div> 
        </div>
    </div>
</div>