<div class="container p-4">
    <div class="row">
       <table class="table">
        <thead>
            <tr align="center">
                <th scope="col" colspan="9" align="center"><strong>HORARIO</strong></th>
                
            </tr>
            <tr>
                <th scope="col" colspan="9">&nbsp;</th>
                
            </tr>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">PROFESOR</th>
                <th scope="col">MATERIA</th>
                <th scope="col">GRUPO</th>
                <th scope="col">DIA</th>
                <th scope="col">HORA INICIO</th>
                <th scope="col">HORA FIN</th>
                <th scope="col">AULA</th>
                <th scope="col">ACCIONES</th>
            </tr>
        </thead>
        <tbody>
            {{#each horarios}}  
            <tr>
                <td>{{horarios_id}}</td>
                <td>{{profesor_id}}</td>
                <td>{{materia_id}}</td>
                <td>{{grupo_id}}</td>
                <td>{{dia}}</td>
                <td>{{hora_inicio}}</td>
                <td>{{hora_fin}}</td>
                <td>{{aula}}</td>
                <td><a href="/horario_estudiante/borrar/{{registro_id}}" class="btn btn-danger">Cancelar Materia</a>&nbsp;&nbsp;<a href="/notas_estudiante/{{estudiante_id}}/{{horarios_id}}" class="btn btn-secondary">Notas</a></td>
            </tr>
            {{else}}
                 <tr align="center">
                    <th scope="col" colspan="6" align="center"><strong>NO HAY MATERIAS AUN REGISTRADAS</strong></th>
                 </tr>
            {{/each}}
        </tbody>
     </table>
   
    </div>
</div>