<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
           <div class="card">
               <div class="card-body">
                   <form action="/profesor/editar/{{profesor.profesor_id}}" method="POST">
                   <div class="form-group">
                       <label><strong>MODIFICAR PROFESOR</strong></label> 
                   </div>
                   <div class="form-group">
                       <input type="text" value="{{profesor.nombre}}" class="form-control" name="nombre" placeholder="Nombres y Apellidos" autofocus> 
                   </div>
                   <div class="form-group">
                       <input type="number" value="{{profesor.cedula}}" class="form-control" name="cedula" placeholder="Cedula"> 
                   </div>
                   <div class="form-group">
                       <input type="email" value="{{profesor.correo}}" class="form-control" name="correo" placeholder="Correo"> 
                   </div>
                   <div class="form-group">
                       <button class="btn btn-success btn-block">Guardar</button>
                   </div>
                   </form>
               </div>
           </div> 
        </div>
    </div>
</div>